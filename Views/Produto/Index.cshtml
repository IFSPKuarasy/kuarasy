<link rel="stylesheet" type="text/css" href="~/assets/css/Produto/index.css" />
@model kuarasy.Models.Entidades.HomeIndexViewModel

@{
    decimal Novo_preco = 0;
    ViewData["Title"] = "Produtos";
}


<div class="container my-5">

    <div class="row">
        @if (ViewBag.Categoria != null){   
            <aside class="col col-md-3">
                <h4 class="text-capitalize fw-bold">@ViewBag.Categoria</h4> 
                <form class="mx-3 my-3" id="Tipos" method="get" asp-action="Index">
                    @foreach (var item in Model.ListTipo)
                    {   
                        <div class="my-2">
                            <input type="checkbox" id="tipo" name=Tipo value=@item.Nome_tipo onchange="document.getElementById('Tipos').submit()">
                            <label class="content-text" for=@item.Nome_tipo> @item.Nome_tipo  (@item.Contagem_tipo)</label><br>
                        </div>
                    }
                </form>
            </aside>
       }
        <main role="main" class="col flex-shrink-0" >
            <div class="d-flex justify-content-end mx-3 my-3"> 
                <a class="btn btn-success ms-3" asp-action="Create">Novo produto + </a>
            </div>

            <ul class="nav nav-pills align-items-center justify-content-end mt-3 mx-3">
                @if (ViewBag.Categoria == null){ 
                    <li class="nav-item flex-grow-1">
                        <strong class="font-monospace" asp-action="Create"> @ViewBag.QuantidadeProduto itens </strong>
                    </li>
                    }    
                <li class="nav-item dropdown border bg-white">
                    <a class="nav-link dropdown-toggle text-dark" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Ordenar por: </a>
                    <ul class="dropdown-menu text-dark">
                        <li><a class="dropdown-item" href="@ViewBag.Filtro&Order=asc&By=Name">A - Z</a></li>
                        <li><a class="dropdown-item" href="@ViewBag.Filtro&Order=desc&By=Name">Z - A</a></li>
                        <li><a class="dropdown-item" href="@ViewBag.Filtro&Order=asc&By=Preco">Menor Preço</a></li>
                        <li><a class="dropdown-item" href="@ViewBag.Filtro&Order=desc&By=Preco">Maior Preço</a></li>
                    </ul>
                </li>
            </ul>
           
            
            <section class="row g-2 d-flex justify-content-center justify-content-md-start" id="productsList">
                @foreach (var item in Model.ListProduto){
                    <div class="card my-3 text-center border-0" style="width: 15rem;">
                        @* Imagem do Produto *@
                        <img src="/productsImage/@Html.DisplayFor(modelItem => item.Imagem)" class="card-img-top mb-4 img-fluid" alt="...">
                        <div class="card-body">
                            @* Nome do Produto*@
                            
                            <a class="card-text" asp-area="" id="nameLink">@Html.ActionLink(item.Nome,"Details", "Produto", new { id = item.Id })</a>
                            
                            @* Preço *@
                            @if(item.Desconto != 0){
                                Novo_preco = item.Preco - (item.Preco * item.Desconto);
                                <p class="text-decoration-line-through text-secondary">@item.Preco</p>
                                <h4 class="fw-bolder d-flex align-items-center justify-content-center my-3">
                                <a id="cart"> <i class = "icon-fluentCart size-icons-lg"></i> </a>
                                R$@Novo_preco.ToString("F")
                            </h4>
                            }else{
                            <h4 class="fw-bolder d-flex align-items-center justify-content-center my-3">
                                <a id="cart"> <i class = "icon-fluentCart size-icons-lg"></i> </a>
                                R$@item.Preco.ToString("F")
                                
                            </h4>
                            }
                            <div class="row border">
                                <a class="col" asp-area="" id="nameLink">@Html.ActionLink("Editar", "Edit", new { id = item.Id })</a>
                                <a class="col" asp-area="" id="nameLink" data-bs-toggle="modal" data-bs-target="#exampleModal"> @Html.ActionLink("Deletar", "Delete", new { id = item.Id })</a>
                            </div>
                        </div>
                    </div>
                }

                  <!-- Pagination Button -->
                    <nav>
                        <ul class="pagination justify-content-center">                        
                        <li class="page-item">
                            <a class="page-link"  aria-label="Previous" id="prev">
                            <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <li class="page-item">
                            <a class="page-link" > 
                                1
                            </a>
                        </li>

                        <li class="page-item">
                            <a class="page-link" aria-label="Next" id="next">
                            <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        </ul>
                    </nav>

            </section>
        </main>

    </div>
</div>


