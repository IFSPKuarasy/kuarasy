              <figure class="figure mb-0">
                <img src="~/assets/img/origin/america.png" alt="" class="figure-img img-fluid mb-0">
              </figure>
            </div>

            @* Produtos do Pais de Origem que está sendo visto *@
            <section id="carouselPromotions" class="section carousel carousel-dark slide" data-bs-ride="carouselPromotions">
                <h2 class="fw-bold text-center">Compre seus produtos</h2>
                <div class="owl-carousel owl-theme">
                        <div class="card text-center border-0" style="width: 18rem;">
                            @* Imagem do Produto *@
                            <img src="~/assets/img/produtos/dancarino.png" class="card-img-top mb-4 img-hover-zoom" alt="...">
