<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kûarasy</title>
    @* Bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    @* Icons *@
    <link rel="stylesheet" href="~/assets/fonts/style.css" />

    @* Fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;1,400&family=Poppins:ital,wght@0,400;0,600;0,700;0,900;1,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/assets/css/common.css" />
</head>

<body>
    <header>
        
        <nav class = "bg-red-medium navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow">
            <div class = "container d-flex justify-content-end">
                <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                    <li class="nav-item pe-3 ps-3"><a> Cadastrar </a></li>
                    <span class = "bg-white divider"> </span>
                    <li class="nav-item pe-3 ps-3"><a> Entrar </a> </li>
                    <li class="nav-item"><i class = "icon-user"></i></li>   
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand d-flex justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/img/LogoKuarasy.png" alt="Logomarca do Kuarasy E-commerce" class = " img-fluid w-50 h-25">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">             
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                          <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categorias
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"> Produtos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy"> Contato</a>
                        </li>
                    </ul>
                </div>

                <form action="/" method="POST" class="d-flex flex-fill">
                            <div class="input-group has-search d-flex flex-fill align-items-center rounded-3">
                                <input class="form-control shadow-sm border border-3" type="search" placeholder="Pesquise por produtos, categorias e vendedores" aria-label="Search" name="inputSearch">
                                <button class="btn bg-yellow" type="submit"> <i class = "icon-search">  </i> </button> 
                            </div>
                            
                </form>

                <i class = "icon-fluentCart"></i>
                        

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

 <footer class="footer pt-4">
    <div class="container">
      <div class="row footer-align d-flex justify-content-between align-items-center" id="lists">
        @* Figura *@
        <div class="col-md-auto footer-scale footer-order-1 text-center">
          <figure class="figure">
                <img src="~/assets/img/GuyandSun.png" class="figure-img img-fluid" alt="Homem sentado ao pôr do sol - Storyset.com ">
            </figure>
        </div>

        <div class="col-lg-auto footer-order-2 mb-3">
            <div class="row">
                <div class="col">
                    @* Atendimento - Lista *@
                    <ul class="nav flex-column">
                        <li class="nav-item">
                        <strong class="nav-link" asp-controller="" asp-action="">Atendimento</strong>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="" asp-action="">FAQ</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Entrar em contato</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Políticas do Kuarasy </a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Termos de Uso</a>
                        </li>
                    </ul>
                </div>
                <div class="col">
                    @* Mapa do site - Lista *@
                    <ul class="nav flex-column">
                        <li class="nav-item">
                        <strong class="nav-link" asp-controller="" asp-action="">Mapa do site</strong>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Produtos</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Categorias</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">Quem somos</a>
                        </li>
                    </ul>
                </div>           
            </div>

        </div>

        @* Logomarca *@
        <div class="col-md-auto footer-order-3 text-center">
              <figure class="figure">
                <img src="~/assets/img/LogoKuarasy.png" alt="Logomarca do Kuarasy E-commerce">
            </figure>
        </div>

      </div>

      <div class="row d-flex">
        <hr class="bg-red">
        
      </div>

    </div>
    @* Arrumar *@
    <div class = "row">
        <div class="container bg-red-medium">
            <hr class="invisible">
        </div>
    </div>

  </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
